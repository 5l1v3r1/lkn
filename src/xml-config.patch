+void gregkh_confdump(FILE *out)
+{
+	struct property *prop;
+	struct symbol *sym;
+	struct menu *menu;
+	int depth=2;
+
+	menu = rootmenu.list;
+	while (menu) {
+		if ((sym = menu->sym))
+			gkh_print_symbol(out, menu);
+		else if ((prop = menu->prompt)) {
+			switch (prop->type) {
+			case P_COMMENT:
+//				fputs("\ncomment ", out);
+//				gkh_print_quoted_string(out, prop->text);
+//				fputs("\n", out);
+				/* I don't think we want to print these at all... */
+				goto cont;
+				break;
+			case P_MENU:
+//				fputs("\nmenu ", out);
+				fprintf(out, "\n<sect%d>\n\t<title>", depth);
+				gkh_print_quoted_string(out, prop->text);
+				fputs("</title>\n<nutlist>\n", out);
+				fputs("\n", out);
+				++depth;
+				break;
+			default:
+				;
+			}
+			if (!expr_is_yes(prop->visible.expr)) {
+				fprintf(out, "<para>\n\tdepends on\n\t<literal>");
+				expr_fprint(prop->visible.expr, out);
+				fprintf(out, "</literal>\n\t</para>\n\n");
+			}
+			fputs("\n", out);
+		}
+cont:
+		if (menu->list)
+			menu = menu->list;
+		else if (menu->next)
+			menu = menu->next;
+		else while ((menu = menu->parent)) {
+			if (menu->prompt && menu->prompt->type == P_MENU) {
+//				fputs("\nendmenu\n", out);
+				--depth;
+				fprintf(out, "\n</nutlist>\n</sect%d>\n\n", depth);
+			}
+			if (menu->next) {
+				menu = menu->next;
+				break;
+			}
+		}
+	}
+}
